{
  "manifest_version": 2,
  "name": "My first extension!",
  "version": "1",
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["content.js"]
    }
  ],
  "background":{
    "scripts":["background.js"]
  },
  "browser_action":{
    "default_popup": "popup.html",
    "default_title": "Gives you the selected word on page."
  }
}
